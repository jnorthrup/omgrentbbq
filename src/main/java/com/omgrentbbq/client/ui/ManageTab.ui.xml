<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>

        .groupBox {
            background: #f5fffa;
            width: 90%;
            text-shadow: black 1px 1px 1px;
            text-transform: capitalize;
            font-family: fantasy;
            font-variant: small-caps;
            font-size: larger;
            color: #fa8072;
        }

    </ui:style>

    <g:HTMLPanel>

        <em>what would you like to do?
            <br/>
            click on the arrows below!
        </em>
        <g:DisclosurePanel ui:field="dp1" open="false" animationEnabled="true" styleName="{style.groupBox}">
            <g:header>Income</g:header>
            <g:VerticalPanel>
                <g:Button ui:field="reportIncomeButton">report new income! (yes!)</g:Button>
            </g:VerticalPanel>
            <!--<g:header/>-->
        </g:DisclosurePanel>


        <g:DisclosurePanel ui:field="dp3" animationEnabled="true" open="false" stylePrimaryName="{style.groupBox}">
            <g:header>Paygroups</g:header>
            <g:VerticalPanel>
                <g:HorizontalPanel>
                    <g:HTML>
                        <em>selected Paygroup</em>
                    </g:HTML>
                    <g:ListBox ui:field="groupListBox" multipleSelect="false"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:HTML>
                        <em>Payees in this group</em>
                    </g:HTML>
                    <g:ListBox ui:field="payeeListBox" multipleSelect="true" visibleItemCount="4" />
                </g:HorizontalPanel>
                <g:Button ui:field="addPayGroup">Create Paygroup</g:Button>
                <g:Button>assign Contact</g:Button>
                <g:Button>assign Shares</g:Button>
                <g:Button>assign Bill to Group</g:Button>
                <g:Button>Pay Bills</g:Button>
            </g:VerticalPanel>
        </g:DisclosurePanel>

        <g:DisclosurePanel ui:field="dp2" animationEnabled="true" styleName="{style.groupBox}">
            <g:header>Payments</g:header>
            <g:VerticalPanel>
                <g:Button ui:field="addPayee">Add Payee</g:Button>
                <g:Button>Assign Bill to Payee</g:Button>
                <g:Button>Pay Bill</g:Button>
            </g:VerticalPanel>
        </g:DisclosurePanel>

        <g:DisclosurePanel animationEnabled="true" ui:field="dp4" stylePrimaryName="{style.groupBox}">
            <g:header>IOU's</g:header>
            <g:VerticalPanel>
                <g:Button>Propose IOU</g:Button>
                <g:Button>Accept IOU</g:Button>
                <g:Button>Pay IOU</g:Button>
                <g:Button>Change/Remove IOU</g:Button>
            </g:VerticalPanel>
        </g:DisclosurePanel>
        <g:CaptionPanel ui:field="caption"/>
    </g:HTMLPanel>
</ui:UiBinder>