<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="res" type="com.omgrentbbq.client.resources.MainBundle"/>
    <g:HTMLPanel>
        <h2>add a new Group payment</h2>

        <hintPopup/>
        name:
        <g:TextBox ui:field="name"/>
        <br/>
        privacy:
        <g:CheckBox  title="checking this box indicates there are no shares or invitations intended for this group of payees and payments."  ui:field="privacy"/>
        <br/>
        <g:Button text="ok" ui:field="okButton"/>
        <g:Button text="cancel" ui:field="cancelButton"/>
                      <br/>
        <g:CaptionPanel ui:field="caption"/>
    </g:HTMLPanel>
</ui:UiBinder>